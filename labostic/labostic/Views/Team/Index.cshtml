@model VmTeam
@{
    ViewData["Title"] = "Index";
}

<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title">
                    <h2>Team Details</h2>
                </div>
                <div class="breadcrumb">
                    <span class="passage"><a href="index.html" style="text-decoration: none;">Home</a></span>
                    <span class="details">Team </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="team">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Doctor)
            {
                <div class="col-lg-3 col-md-3 col-sm-6 ">
                    <div class="imagebox">
                        <div class="picture-over">
                            <div class="icon-plus">
                                <a href="" id="plus-team">
                                    <i class="fas fa-plus"></i>
                                </a>
                                <ul class="social">
                                        @foreach (var item2 in item.SocialToDoctor)
                                        {
                                            <li class="in" style="display:flex; margin:42px 0px !important;">
                                                <a href="@item2.Link">
                                                    <i class="@item2.Social.Icon"></i>
                                                </a>
                                            </li>
                                        }



                                </ul>
                            </div>
                            <div class="picture">
                                <img src="/image/@item.Image" alt="">
                            </div>
                        </div>
                        <div class="image-title">
                            <h5><a asp-controller="team" asp-action="details" asp-route-doctorId="@item.Id">@item.Fullname</a></h5>
                            <h6>@item.Position.Name</h6>
                        </div>

                    </div>
                </div>
            }

        </div>
    </div>
</div>
