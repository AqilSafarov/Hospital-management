@model VmFooter
@{
    ViewData["Title"] = "Index";
}

<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title">
                    <h2>Contact</h2>
                </div>
                <div class="breadcrumb">
                    <span class="passage"><a href="index.html" style="text-decoration: none;">Home</a></span>
                    <span class="details">Contact</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contact">
    <div class="content-side">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="right-side">
                        <div class="about">
                            <div class="title">
                                <h4>
                                    Our Office Inforamtion
                                </h4>
                            </div>
                            <div class="part-contact">
                                <div class="contact-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="contact-content">
                                    <h5>Location</h5>
                                    <p>
                                        @Model.Setting.Address

                                    </p>


                                </div>
                            </div>
                            <div class="hr">
                                <span class="holder">
                                    <span class="line">

                                    </span>
                                </span>
                            </div>
                            <div class="part-contact">
                                <div class="contact-icon">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="contact-content">
                                    <h5>Call Us</h5>
                                    <p>
                                        24/7 Support
                                        @Model.Setting.PhoneNumOne

                                    </p>


                                </div>
                            </div>
                            <div class="hr">
                                <span class="holder">
                                    <span class="line">

                                    </span>
                                </span>
                            </div>
                            <div class="part-contact">
                                <div class="contact-icon">
                                    <i class="far fa-envelope"></i>
                                </div>
                                <div class="contact-content">
                                    <h5>Email</h5>
                                    <a href="mailto:@Model.Setting.EmailFooter">@Model.Setting.EmailFooter</a>
                                   <br >
                                    <a href="mailto:@Model.Setting.EmailNav">@Model.Setting.EmailNav</a>
                                </div>
                            </div>

                        </div>

                        <div class="social">
                            <ul>
                                @*@foreach (var item in Model.Social)
                                {
                                    <li class="gog">
                                        <span class="tooltipgog">@item.Name</span>

                                        <a href="@item.Link"><i class="@item.Icon"></i></a>
                                    </li>
                                }*@

                            </ul>
                        </div>

                    </div>

                </div>
                <div class="col-lg-8">
                    <div class="left-side">
                        <div class="getin-touch"> </div>
                        <div class="section-title">
                            <div class="title-header">
                                <h5>GET IN T</h5>
                                <h2>
                                    Do not Use This Form To Communicate Personal Data.
                                </h2>
                            </div>
                        </div>
                        <form  method="get" asp-controller="Contact" asp-action="Message">
                            <div asp-validation-summary="All"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label for="">
                                        <span>
                                            <input  asp-for="Message.Fullname" placeholder="Your Name">
                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-6">
                                    <label for="">
                                        <span>
                                            <input  asp-for="Message.Email" placeholder="Your Email">

                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label for="">
                                        <span>
                                            <input type="number" asp-for="Message.PhoneNumber" placeholder="Phone Number">

                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-6">
                                    <label for="">
                                        <span>
                                            <input asp-for="Message.Subject" placeholder="Subject">

                                        </span>
                                    </label>
                                </div>
                            </div>
                            <label for="">
                                <span>
                                    <textarea asp-for="Message.Text" cols="30" rows="10" placeholder="Message"></textarea>
                                </span>
                            </label>
                            <button type="submit"  style="position:relative; background:#3368c6; color:white; padding:11px 31px 11px 31px; border: 1px solid #eaeff5; "  >Send Messag</button>
                        </form>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div id="mp">
        <div class="mapouter w-100">
            <div class="gmap_canvas w-100">
                <iframe width="100%" height="452" id="gmap_canvas"
                        src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed"
                        frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://123movies-to.org"></a><br>
                <style>
                    .mapouter {
                        position: relative;
                        text-align: right;
                        height: 452px;
                        width: 1080px;
                    }
                </style><a href="https://www.embedgooglemap.net">embed google maps html</a>
                <style>
                    .gmap_canvas {
                        overflow: hidden;
                        background: none !important;
                        height: 452px;
                        width: 1080px;
                    }
                </style>
            </div>
        </div>

    </div>
</div>

