@model List<Labostic.Models.Services>
@{
    ViewData["Title"] = "Index";
    int firstRow = (int)((ViewBag.CurrentPage - 1) * ViewBag.DataPage);
}

<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="d-flex align-items-center">
                        <h5 class="page-title">Dashboard</h5>
                        <ul class="breadcrumb ml-2">
                            <li class="breadcrumb-item"><a href="index.html"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="index.html">Doctor Dashboard</a></li>
                            <li class="breadcrumb-item active">Services</li>
                        </ul>
                    </div>
                </div>
                <div class="col-auto text-right">
                    <a class="btn btn-white filter-btn" href="javascript:void(0);" id="filter_search">
                        <i class="feather-filter"></i>
                    </a>
                </div>
            </div>
        </div>

        <form action="#" method="post" id="filter_inputs">
            <input type="hidden" name="csrf_token_name" value="4a0efd10c152f3f6117fec6b1be8e87e" />
            <div class="card filter-card">
                <div class="card-body pb-0">
                    <div class="row filter-row">
                        <div class="col-sm-6 col-md-4">
                            <div class="form-group">
                                <label>Patient ID</label>
                                <input class="form-control" type="text" name="from">
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="form-group">
                                <label>Patient Name</label>
                                <input class="form-control" type="text" name="from">
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="form-group">
                                <label>Date</label>
                                <input class="form-control" type="text" name="to">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>


        <div class="row">
            <div class="col-sm-12">
                <div class="create-everything" style="padding-bottom: 6px;  ">
                    <a class="button-create text-white bg-theme-1 shadow-md mr-2" asp-area="admin" asp-controller="Services" asp-action="create" style="font-size:14px; padding:13px 24px 16px 23px; background:#323584;">Create Contact</a>

                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Number</th>
                                        <th>Name</th>
                                        <th>Image</th>
                                        <th>Image Two</th>
                                        <th>Image Three</th>
                                        <th>Image Four</th>
                                        <th>Title</th>
                                        <th>Title Two</th>
                                        <th>Title Three</th>
                                        <th>Title Four</th>
                                        <th>Description</th>
                                        <th>Description Two</th>
                                        <th>Description Three</th>
                                        <th>Description Four</th>
                                        <th>Icon</th>
                                        <th>Icon Two</th>
                                        <th>Icon Three</th>
                                        <th>Icon Four</th>
                                        <th>Icon Desc</th>
                                        <th>Icon Desc Two</th>
                                        <th>Icon Desc Three</th>
                                        <th>Icon Desc Four</th>
                                        <th>Icon Title</th>
                                        <th>Icon Title Two</th>
                                        <th>Icon Title Three</th>
                                        <th>Icon Title Four</th>





                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = firstRow;}

                                    @foreach (var item in Model)
                                    {
                                        i++;

                                    <tr>
                                        <td>
                                            @i
                                        </td>
                                        <td>@item.Name</td>

                                        <td><img width="28" height="28" src="/@item.Image" class="rounded-circle m-r-5" alt="@item.Image"></td>
                                        <td><img width="28" height="28" src="/@item.ImageTwo" class="rounded-circle m-r-5" alt="@item.ImageTwo"></td>
                                        <td><img width="28" height="28" src="/@item.ImageThree" class="rounded-circle m-r-5" alt="@item.ImageThree"></td>
                                        <td><img width="28" height="28" src="/@item.ImageFour" class="rounded-circle m-r-5" alt="@item.ImageFour"></td>
                                        <td>@item.Title</td>
                                        <td>@item.TitleTwo</td>
                                        <td>@item.TitleThree</td>
                                        <td>@item.TitleFour</td>
                                        <td>@(@item.Desc!=null && @item.Desc.Length>50? @item.Desc.Substring(0,50): @item.Desc)</td>
                                        <td>@(@item.DescTwo!=null && @item.DescTwo.Length>50? @item.DescTwo.Substring(0,50): @item.DescTwo)</td>
                                        <td>@(@item.DescThree!=null && @item.DescThree.Length>50? @item.DescThree.Substring(0,50): @item.DescThree)</td>
                                        <td>@(@item.DescFour!=null && @item.DescFour.Length>50? @item.DescFour.Substring(0,50): @item.DescFour)</td>
                                        <td>@item.Icon</td>
                                        <td>@item.IconTwo</td>
                                        <td>@item.IconThree</td>
                                        <td>@item.IconFour</td>
                                        <td>@(@item.IconDesc!=null && @item.IconDesc.Length>50? @item.IconDesc.Substring(0,50): @item.IconDesc)</td>
                                        <td>@(@item.IconDescTwo!=null && @item.IconDescTwo.Length>50? @item.IconDescTwo.Substring(0,50): @item.IconDescTwo)</td>
                                        <td>@(@item.IconDescThree!=null && @item.IconDescThree.Length>50? @item.IconDescThree.Substring(0,50): @item.IconDescThree)</td>
                                        <td>@(@item.IconDescFour!=null && @item.IconDescFour.Length>50? @item.IconDescFour.Substring(0,50): @item.IconDescFour)</td>

                                        <td>@(@item.IconTitle!=null && @item.IconTitle.Length>50? @item.IconTitle.Substring(0,50): @item.IconTitle)</td>
                                        <td>@(@item.IconTitleTwo!=null && @item.IconTitleTwo.Length>50? @item.IconTitleTwo.Substring(0,50): @item.IconTitleTwo)</td>
                                        <td>@(@item.IconTitleThree!=null && @item.IconTitleThree.Length>50? @item.IconTitleThree.Substring(0,50): @item.IconTitleThree)</td>
                                        <td>@(@item.IconTitleFour!=null && @item.IconTitleFour.Length>50? @item.IconTitleFour.Substring(0,50): @item.IconTitleFour)</td>




                                        <td class="text-right d-flex">
                                            <a asp-area="admin" asp-controller="Services" asp-action="update" asp-route-servicesId="@item.Id" class="btn btn-sm btn-white text-success mr-2 d-flex"><i class="far fa-edit mr-1"></i> Edit</a>

                                            <a asp-area="admin" asp-controller="Services" asp-action="delete" asp-route-servicesId="@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-sm btn-white text-danger mr-2 d-flex"><i class="far fa-trash-alt mr-1"></i>Delete</a>
                                        </td>
                                        <td class="text-right d-flex">
                                        </td>

                                    </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" asp-area="admin" asp-controller="Services" asp-action="index" asp-route-page="1">Previous</a></li>
                @for (int j = 1; j <= ViewBag.PageCount; j++)
                {
                    <li class="page-item"> <a class="page-link @(j==ViewBag.CurrentPage ?"pagination__link--active":"")" asp-area="admin" asp-controller="Services" asp-action="index" asp-route-page="@j">@j</a> </li>
                }
                <li class="page-item"><a class="page-link" asp-area="admin" asp-controller="Services" asp-action="index" asp-route-page="@ViewBag.PageCount">Next</a></li>
            </ul>
        </nav>
    </div>
</div>


