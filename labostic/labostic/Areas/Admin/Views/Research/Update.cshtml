@model Labostic.Models.Research
@{
    ViewData["Title"] = "Update";
}
<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="d-flex align-items-center">
                        <h5 class="page-title">Dashboard</h5>
                        <ul class="breadcrumb ml-2">
                            <li class="breadcrumb-item"><a href="index.html"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active">Writer</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Basic Inputs</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-area="admin" asp-controller="Research" asp-action="update" enctype="multipart/form-data">
                            <div asp-validation-summary="All" style="color:red; margin-bottom:30px;"></div>
                            <input asp-for="Id" hidden />
                            <input asp-for="Image" hidden />
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Title</label>
                                <div class="col-md-10">
                                    <input asp-for="Title" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Descrption</label>
                                <div class="col-md-10">
                                    <input asp-for="Desc" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div id="img-update" style="position:absolute; left:493px; ">
                                    <img src="/image/@Model.Image" alt="" style="width:15%; height:43%; border-radius:50px; ">

                                </div>
                                <label class="col-form-label col-md-2" asp-for="ImageFile">Img</label>
                                <div class="col-md-10">
                                    <input asp-for="ImageFile" class="input w-full border mt-2">

                                </div>
                            </div>
                            <div class="form-group row">
                                <div id="img-update" style="position:absolute; left:493px; ">
                                    <img src="/image/@Model.ImageResDet" alt="" style="width:15%; height:43%; border-radius:50px; ">

                                </div>
                                <label class="col-form-label col-md-2" asp-for="ImageFileResDet">Img Res Det</label>
                                <div class="col-md-10">
                                    <input asp-for="ImageFileResDet" class="input w-full border mt-2">

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Category</label>
                                <div class="col-md-10">
                                    <select asp-for="ResearchCategoryId" asp-items="@(new SelectList(ViewBag.ResearchCategory, "Id", "Name"))" class="form-control">
                                        <option selected="" disabled>Select Category</option>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Date</label>
                                <div class="col-md-10">
                                    <input asp-for="Date" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Lacation</label>
                                <div class="col-md-10">
                                    <input asp-for="Location" class="form-control">
                                </div>
                            </div>




                            <div class="form-group writer " style="border:1px solid #e1e1e1; padding:20px; border-radius:7px; ">

                                <span id="addWriter" style="font-size:23px; color:#323584; cursor:pointer;">+</span>
                                @{ int i = 0; }

                                @foreach (var item in Model.WriterToResearch)
                                {
                                    <div class="rs" style="box-sizing:content-box !important; display:flex !important; margin-bottom:20px !important; ">
                                        <label asp-for="WriterToResearch[i].WriterId" class="col-form-label col-md-2">Writer</label>
                                        <div class="col-md-10">
                                            <select asp-for="WriterToResearch[i].WriterId" asp-items="@(new SelectList(ViewBag.Writer, "Id", "Fullname"))" class="form-control">
                                                <option selected="" disabled>Select Writer</option>

                                            </select>
                                        </div>
                                        <span class="deleteWrite" style="font-size:21px; color:red; cursor:pointer;">x</span>
                                    </div>
                                    i++;

                                }


                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Punk Title</label>
                                <div class="col-md-10">
                                    <input asp-for="PunkTitle" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Punk Desc</label>
                                <div class="col-md-10">
                                    <input asp-for="PunkDesc" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div id="img-update" style="position:absolute; left:493px; ">
                                    <img src="/image/@Model.ImageFileResDescImg" alt="" style="width:15%; height:43%; border-radius:50px; ">

                                </div>
                                <label class="col-form-label col-md-2" asp-for="ImageFileResDescImg">Img</label>
                                <div class="col-md-10">
                                    <input asp-for="ImageFileResDescImg" class="input w-full border mt-2">

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Research Adv Desc</label>
                                <div class="col-md-10">
                                    <input class="form-control" asp-for="ResearchAdvDesc">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Research Adv Title</label>
                                <div class="col-md-10">
                                    <input class="form-control" asp-for="ResearchAdvTitle">
                                </div>
                            </div>
                            <div class="text-right mt-5">
                                <a asp-area="admin" asp-controller="Research" asp-action="index" style="border-radius:6px; padding:12px 19px 15px 14px;" class="button w-24 border text-gray-700 mr-1">Cancel</a>
                                <button type="submit" style="background:#323584; border:none; padding: 12px 35px 14px 30px; border-radius: 10px ;" class="button w-24 bg-theme-1 text-white">Create</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
